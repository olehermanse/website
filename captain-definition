  "schemaVersion" :1 ,
  "dockerfileLines" :[
    "FROM nginx",
    "WORKDIR /website",
    "ADD ./src /website",
    "RUN apt-get update",
    "RUN apt-get install -y git",
    "RUN apt-get install -y curl",
    "RUN curl --silent -L https://github.com/gohugoio/hugo/releases/download/v0.37.1/hugo_0.37.1_Linux-64bit.deb -o hugo.deb",
    "RUN dpkg -i hugo.deb",
    "RUN git submodule update --init --recursive",
    "RUN ls -al themes/kiss",
    "RUN ls",
    "RUN pwd",
    "RUN cp nginx.conf /etc/nginx/nginx.conf",
    "RUN cat /etc/nginx/nginx.conf",
    "RUN mkdir -p content",
    "RUN mkdir -p data",
    "RUN mkdir -p layouts",
    "RUN mkdir -p static",
    "RUN hugo -v",
    "RUN mkdir -p /var/www/oleherman.com/public/",
    "RUN cp -r /website/public/* /var/www/oleherman.com/public/",
    "RUN ls /var/www/oleherman.com/public/",
    "RUN echo 'Hello, world' > /var/www/oleherman.com/public/index.html",
    "ENV NODE_ENV production",
    "ENV PORT 80",
    "EXPOSE 80"
